<div class="row wrapper border-bottom white-bg page-heading">
	<div class="ibox-title col-lg-12" style="height: 50px">
		<div class="heading">
			<!-- 搜索  -->
			<div class="col-sm-12">
				<div class="form-group col-md-2">
					<div>
						<input type="text" placeholder="专题名称" class="form-control" ng-model="nameSearch">
					</div>
				</div>

				<div class="form-group col-md-3">
					<div>
						<input type="text"  datapicker="addTimeSearch" placeholder="添加时间" class="Wdate form-control" readonly="readonly">
					</div>
				</div>
				<button class="btn btn-success" ng-click="loadData(true)"><span class="glyphicon glyphicon-search"></span></button>

				<!--刷新按钮触发模态框-->
				<button class="btn btn-success pull-right" style="margin-top: 0px;" ng-click="loadData(true)">
	                <span class="glyphicon glyphicon-refresh"></span> 刷新
	            </button>
				<!-- 添加按钮触发模态框 -->
				<!--<button class="btn  btn-warning pull-right" style="margin-top: 0px;" ng-click="openModal()">
	                <span class="glyphicon glyphicon-plus"></span> 新增
	            </button>-->
			</div>
			<!-- /.col-lg-12 -->
		</div>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">

				<div class="ibox-content">
					<table datatable="ng" dt-options="dtOptions" class="table table-striped table-bordered table-hover dataTables-example">
						<thead>
							<tr>
								<th>专题ID</th>
								<th>专题标题</th>
								<th>专题名称 </th>
								<th>专题主图 </th>
								<th>创建时间</th>
								<th>状态 </th>
								<th>修改时间</th>
								<th>操作</th>
							</tr>
						</thead>
						<tbody>
							<tr ng-repeat="topiclist in topics">
								<td ng-bind="topiclist.topicId "></td>
								<td ng-bind="topiclist.title "></td>
								<td ng-bind="topiclist.name"></td>
								<td><img my-img ng-src="{{topiclist.mainImg }}" onerror="javascript:this.src='../../img/loadding.gif';" alt="努力加载中..." style="width: 50px" /></td>
								<td ng-bind="topiclist.createTimeStr"></td>
								<td ng-if="topiclist.status==0">禁用</td>
								<td ng-if="topiclist.status==1">启用</td>
								<td ng-bind="topiclist.updateTimeStr"></td>
								<td class="action-column">
									<!--<button class="btn btn-warning" ng-click="openModal(topiclist.topicId)">修改</button>
									<button ng-if="topiclist.status==1" class="btn btn-warning" ng-click="enable(topiclist.topicId,0)">禁用</button>
									<button ng-if="topiclist.status==0" class="btn btn-warning" ng-click="enable(topiclist.topicId,1)">启用</button>
									<button class="btn btn-warning" ng-click="detelateById(topiclist.topicId)"><spanaria-hidden="true"></span>删除</button>-->
									<button class="btn btn-warning" ng-click="openTopicModal(topiclist.topicId)">专题推荐商品</button>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<datalistpager></datalistpager>
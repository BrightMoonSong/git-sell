<div class="row wrapper border-bottom white-bg page-heading">
	<div class="ibox-title col-lg-12" style="height: 50px">
		<div class="heading">
			<!-- 搜索  -->
			<div class="col-sm-12">

				<!--刷新按钮触发模态框-->
				<button type="button" class="btn btn-success pull-right" style="margin-top: 0px;" ng-click="loadData(true)">
				                <span class="glyphicon glyphicon-refresh"></span> 刷新
				            </button>
				<!-- 添加按钮触发模态框 -->
				<button type="button" class="btn  btn-warning pull-right" style="margin-top: 0px;" ng-click="openModal()">
	                <span class="glyphicon glyphicon-plus"></span> 新增
	            </button>
			</div>
			<!-- /.col-lg-12 -->
		</div>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">

				<div class="ibox-content">
					<table datatable="ng" dt-options="dtOptions" class="table table-striped table-bordered table-hover dataTables-example">
						<thead>
							<tr>
								<th>药品推荐ID</th>
								<!--<th>药店ID</th>
								<th>药品ID </th>-->
								<th>商品名称</th>
								<th>商品图片</th>
								<th>药品规格</th>
								<th>排序号 </th>
								<th> 创建时间</th>
								<th>状态 </th>
								<th>修改时间</th>
								<th style="    width: 165px;">操作</th>
							</tr>
						</thead>
						<tbody>
							<tr ng-repeat="stand in standList">
								<td ng-bind="stand.standingId"></td>
								<!--<td ng-bind="stand.drugstoreId"></td>
								<td ng-bind="stand.goodsId"></td>-->
								<td ng-bind="stand.goodsName"></td>
								<td><img my-img ng-src="{{stand.goodsImg}}" onerror="javascript:this.src='../../img/loadding.gif';" alt="努力加载中..." style="width: 50px" /></td>
								<td ng-bind="stand.goodsSpec "></td>
								<td ng-bind="stand.sort"></td>
								<td ng-bind="stand.createTimeStr"></td>
								<td ng-if="stand.status==0">禁用</td>
								<td ng-if="stand.status==1">启用</td>
								<td ng-bind="stand.updateTimeStr"></td>

								<td class="action-column">                                                                                                                         
									<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#update" ng-click="opengoods(stand.standingId, false)">修改
                                    <!--<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>-->
                                </button>
									<button ng-if="stand.status==1" type="button" class="btn btn-warning" data-toggle="modal" data-target="#update" ng-click="enableById(stand.standingId,0)">禁用
                                    <!--<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>-->
                                </button>
									<button ng-if="stand.status==0" type="button" class="btn btn-warning" data-toggle="modal" data-target="#update" ng-click="enableById(stand.standingId,1)">启用
                                    <!--<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>-->
                                </button>
									<button type="button" class="btn btn-warning" data-toggle="modal" ng-click="deleteById(stand.standingId)">
	                                   		删除
	                                	</button>
								</td>
							</tr>
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
</div>
<datalistpager></datalistpager>
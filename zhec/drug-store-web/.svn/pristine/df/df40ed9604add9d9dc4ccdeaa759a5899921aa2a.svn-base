<style type="text/css">
	.imgstarwidth{
		width: 27px;
	}
</style>
<div class="inmodal">
	<div class="modal-header">
		<h1 class="modal-title">订单商品评价</h1>
	</div>
	<div style="background-color: #fff;">
		<ul class="form-horizontal">
			<li class="list-group-item">
				<div class="form-group col-sm-12">
					<label class="col-sm-2 control-label" style="width: 138.5px;">评分等级 :</label>
					<div class="col-sm-10">
						<img src="../../img/Star2.png" class="imgstarwidth" ng-repeat="res in arrayAppraisalScore"/>
						<img src="../../img/Star1.png" class="imgstarwidth" ng-repeat="res in arrayAppraisalScoreRev"/>
					</div>
				</div>
				<div class="form-group col-sm-4">
					<label class="col-sm-5 control-label">用户名称:</label>
					<div class="col-sm-7">
						<span class="form-control" ng-bind="dataEntityAppraisal.userName"></span>
					</div>
				</div>
				<div class="form-group col-sm-4">
					<label class="col-sm-5 control-label">用户电话:</label>
					<div class="col-sm-7">
						<span class="form-control" ng-bind="dataEntityAppraisal.userPhone"></span>
					</div>
				</div>
				<div class="form-group col-sm-4">
					<label class="col-sm-5 control-label">评价时间:</label>
					<div class="col-sm-7">
						<span class="form-control" ng-bind="dataEntityAppraisal.createTimeStr"></span>
					</div>
				</div>
				<div class="form-group col-sm-12">
					<label class="col-sm-2 control-label" style="width: 138.5px;">评价内容 :</label>
					<div class="col-sm-10">
						<textarea class="form-control" ng-bind="dataEntityAppraisal.content" readonly="readonly" style="background-color: #fff;"></textarea>
					</div>
				</div>
				<div class="form-group col-sm-4" ng-if="dataEntityAppraisal.storeReply||dataEntityAppraisal.storeReply===0">
					<label class="col-sm-5 control-label">回复操作人:</label>
					<div class="col-sm-7">
						<span class="form-control" ng-bind="dataEntityAppraisal.replyUserName"></span>
					</div>
				</div>
				<div class="form-group col-sm-4" ng-if="dataEntityAppraisal.storeReply||dataEntityAppraisal.storeReply===0">
					<label class="col-sm-5 control-label">回复时间:</label>
					<div class="col-sm-7">
						<span class="form-control" ng-bind="dataEntityAppraisal.updateTimeStr"></span>
					</div>
				</div>
				<div class="form-group col-sm-12" ng-if="dataEntityAppraisal.storeReply||dataEntityAppraisal.storeReply===0">
					<label class="col-sm-2 control-label" style="width: 138.5px;">药店回复 :</label>
					<div class="col-sm-10">
						<textarea class="form-control" ng-bind="dataEntityAppraisal.storeReply" readonly="readonly" style="background-color: #fff;"></textarea>
					</div>
				</div>
				<div class="form-group col-sm-12" ng-hide="dataEntityAppraisal.storeReply||dataEntityAppraisal.storeReply===0">
					<label class="col-sm-2 control-label" style="width: 138.5px;">药店回复 :</label>
					<div class="col-sm-10">
						<textarea class="form-control" ng-model="dataEntityAppraisal.storeReplyAppraisal" style="background-color: #fff;"></textarea>
					</div>
				</div>
				<div style="clear: both;"></div>
			</li>
		</ul>
	</div>

	<div class="modal-footer">
		<button class="btn btn-warning" ng-click="updateinfoAppraisal()" ng-hide="dataEntityAppraisal.storeReply||dataEntityAppraisal.storeReply===0">
            <span class="glyphicon glyphicon-floppy-disk" ></span> 回复
       </button>
		<button class="btn btn-success" ng-click="cancelModalAppraisal()">
            <span class="glyphicon glyphicon-share-alt"></span>取消
        </button>
	</div>
</div>
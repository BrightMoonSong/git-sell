<div class="row wrapper border-bottom white-bg page-heading">
	<div class="ibox-title col-lg-12" style="height: 50px">
		<div class="heading">
			<!-- 搜索  -->
			<div class="col-sm-12">
				<div class="form-group col-md-2">
					<div>
						<input type="text" placeholder="车型名称" class="form-control" ng-model="modelName">
					</div>
				</div>
				<button class="btn btn-success" ng-click="loadData(true)">
                                <span class="glyphicon glyphicon-search"></span>
                </button>

				<!--刷新按钮触发模态框-->
				<button class="btn btn-success pull-right" style="margin-top: 0px;" ng-click="loadData(true)">
				                <span class="glyphicon glyphicon-refresh"></span> 刷新
				</button>
				<!-- 添加按钮触发模态框 -->
				<button class="btn  btn-warning pull-right" style="margin-top: 0px;" ng-click="openModal()">
	                <span class="glyphicon glyphicon-plus"></span> 新增
	            </button>
			</div>
			<!-- /.col-lg-12 -->
		</div>
	</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">

				<div class="ibox-content">
					<table datatable="ng" dt-options="dtOptions" class="table table-striped table-bordered table-hover dataTables-example">
						<thead>
							<tr>
						<!--		<th>车型ID</th>-->
								<th>车型名称</th>
								<th>车型规格</th>
								<th>载重量</th>
								<th>车型选中图标 </th>
								<th>车型未选中图标</th>
								<th>起步价</th>
								<th>排序号 </th>
							<!--	<th>注册时间 </th>-->
								<th>状态</th>
								<!--<th>修改时间</th>-->
								<th style="width: 170px;">操作</th>
							</tr>
						</thead>
						<tbody>
							<tr ng-repeat="role in carmodelList">
								<!--<td ng-bind="role.modelId"></td>-->
								<td ng-bind="role.modelName"></td>
								<td ng-bind="role.modelSpec"></td>
								<td ng-bind="role.loadCapacity"></td>
								<td >
									<img ng-src="{{role.modelImgUrlSelected}}" my-img style="width: 50px;"/>
								</td>
								<td >
									<img ng-src="{{role.modelImgUrlUnselected}}" my-img style="width: 50px;"/>
								</td>
								<td  ng-bind="role.referStartPrice | currency:' '"></td>
								<td ng-bind="role.sort"></td>
							<!--	<td ng-bind="role.createTimeStr"></td>-->
								<td ng-if="role.status==2" ng-class="{true: 'enabok', false: 'enabno'}[role.status==1]">禁用</td>
								<td ng-if="role.status==1" ng-class="{true: 'enabok', false: 'enabno'}[role.status==1]">启用</td>
								<td ng-if="role.status!=2&&role.status!=1"></td>
							<!--	<td ng-bind="role.updateTimeStr"></td>-->
								<td class="action-column">
									<button class="btn btn-warning" ng-if="role.status==2" ng-click="enableId(role.modelId,1)">启用</button>
									<button class="btn btn-warning" ng-if="role.status==1" ng-click="enableId(role.modelId,2)">禁用</button>
									<button class="btn btn-warning" ng-click="enableId(role.modelId,3)">删除</button>
									<button class="btn btn-warning" ng-click="openModal(role.modelId)">修改</button>
								</td>
							</tr>
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
</div>
<datalistpager></datalistpager>